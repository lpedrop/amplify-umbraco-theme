@inherits Umbraco.Web.Mvc.UmbracoViewPage<PodItem>
@using Amplify.Web.Custom.Extensions

<div class="icon-item has-text-centered">
    @if (Model.Icon.Label.HasValue())
    {
    <div class="has-line-circle @RazorHelper.BackgroundClass(Model.FillGradient) @RazorHelper.BorderColorClass(Model.BorderColor) @RazorHelper.TextColorClass(Model.IconColor)">
        @RazorHelper.RenderFaIcon(Model.Icon)
    </div>
    }
    @if (Model.Title.HasValue())
    {
        <h4 class="is-size-4-tablet is-size-5 has-text-weight-semibold">@Model.Title</h4>
    }
    @if (Model.SubTitle.HasValue())
    {
        @RazorHelper.AddClass(Model.SubTitle, "is-size-5", "p")
    }
    @if (Model.Button.HasValue())
    {
        <div class="buttons is-centered has-margin-top-5">
            @RazorHelper.RenderLinkButton(Model.Button, "is-medium")
        </div>
    }
</div>
