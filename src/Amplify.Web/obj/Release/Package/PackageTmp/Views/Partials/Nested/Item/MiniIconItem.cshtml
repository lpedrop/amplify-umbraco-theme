@inherits Umbraco.Web.Mvc.UmbracoViewPage<MiniIconComposition>
@using Umbraco.Web.PublishedModels
@using Amplify.Core.Extensions

@{ 
    var iconColor =  Model.IconColor.Value.HasValue() ? $"color:{Model.IconColor.Value};" : ""; 
}

<div class="icon-item level align-content-center is-mobile" data-aos="fade-up">
    <div class="level-item" style=" @iconColor">
        @RazorHelper.RenderFaIcon(Model.Icon)
    </div>
    @if (Model.Text.HasValue())
    {
        <p class="is-size-5 level-item">@Model.Text</p>
    }
</div>